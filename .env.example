# 基础配置
PROJECT_NAME="Domain Compliance Scanner"
VERSION="1.0.0"
ENVIRONMENT="development"
DEBUG=true

# 服务器配置
HOST="0.0.0.0"
PORT=8000

# 数据库配置
DATABASE_URL="postgresql+asyncpg://scanner_user:scanner_password@localhost:5432/domain_scanner"
DATABASE_ECHO=false

# Redis配置
REDIS_URL="redis://localhost:6379/0"

# JWT安全配置
SECRET_KEY="your-super-secret-key-change-this-in-production"
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=480
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS配置（开发环境）
CORS_ORIGINS=["http://localhost:3000","http://localhost:5173","http://localhost:8080"]

# 文件存储配置
STORAGE_PATH="./storage"
SCREENSHOT_PATH="./storage/screenshots"
LOGS_PATH="./storage/logs"
MAX_FILE_SIZE=10485760

# 扫描配置
MAX_CONCURRENT_TASKS_PER_USER=5
MAX_SUBDOMAINS_PER_TASK=1000
MAX_CRAWL_DEPTH=5
TASK_TIMEOUT_HOURS=24

# AI配置
DEFAULT_AI_MODEL="gpt-4-vision-preview"
DEFAULT_MAX_TOKENS=1000
DEFAULT_TEMPERATURE=0.7
AI_REQUEST_TIMEOUT=120
AI_RETRY_COUNT=3

# 安全配置
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=30
RATE_LIMIT_PER_MINUTE=100

# Celery配置
CELERY_BROKER_URL="redis://localhost:6379/0"
CELERY_RESULT_BACKEND="redis://localhost:6379/0"

# 浏览器配置
PLAYWRIGHT_HEADLESS=true
PLAYWRIGHT_TIMEOUT=30000
SCREENSHOT_VIEWPORT_WIDTH=1920
SCREENSHOT_VIEWPORT_HEIGHT=1080

# 监控配置
ENABLE_METRICS=true
LOG_LEVEL="INFO"